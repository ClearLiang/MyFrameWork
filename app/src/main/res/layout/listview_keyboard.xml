<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <!--title-->
    <RelativeLayout
        android:layout_above="@+id/ll_password"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="交易密码"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/grey"
            android:layout_marginBottom="20px"/>
    </RelativeLayout>
    <!--password-->
    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_above="@+id/rl_forget"
        android:background="@drawable/bg_grey_hollow"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_first_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />
        <TextView
            android:id="@+id/tv_second_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />
        <TextView
            android:id="@+id/tv_third_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />
        <TextView
            android:id="@+id/tv_fourth_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />
        <TextView
            android:id="@+id/tv_fifth_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="@color/black"
            android:textSize="30sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />
        <TextView
            android:id="@+id/tv_sixth_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_forget"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_forget_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="忘记密码？"
            android:textColor="@color/red"
            android:textSize="13sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:overScrollMode="never"
        android:layout_above="@+id/ll_keyboard_del"/>
    <LinearLayout
        android:id="@+id/ll_keyboard_del"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey" />
        <TextView
            android:id="@+id/tv_zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_pwd_item"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="25sp" />
        <RelativeLayout
            android:id="@+id/rl_undo"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/delete" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>