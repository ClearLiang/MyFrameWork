<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.a99794.framework">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!--允许应用程序改变网络状态-->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!--允许应用程序改变WIFI连接状态-->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!--允许应用程序访问有关的网络信息-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--允许应用程序访问WIFI网卡的网络信息-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />


    <application
        android:name="com.example.a99794.framework.view.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <!--设计稿尺寸-->
        <meta-data
            android:name="design_width"
            android:value="720" />
        <meta-data
            android:name="design_height"
            android:value="1280" />

        <activity android:name="com.example.a99794.framework.view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.a99794.framework.view.activity.FirstActivity" />
        <activity
            android:name="com.example.a99794.framework.view.activity.SecondActivity" />

        <activity
            android:name="com.example.a99794.framework.view.activity.PayActivity"
            android:theme="@style/dialog"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name="com.example.a99794.framework.view.activity.FragmentActivity" />

        <activity
            android:name="com.example.a99794.framework.view.activity.MyNotificationActivity" />

        <activity
            android:name="com.example.a99794.framework.view.activity.ThirdActivity" />

        <!-- 微信登陆配置 start -->
        <activity
            android:name="com.example.a99794.framework.wxapi.WXEntryActivity"
            android:exported="true"
            android:theme="@style/wx_login_style"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <!-- 微信登陆配置 end -->

        <service android:name="com.example.a99794.framework.service.RemindService" />
        <service android:name="com.example.a99794.framework.service.BindService" />
        <service android:name="com.example.a99794.framework.service.MyIntentService" />
        <service android:name=".service.DownloadService" />

    </application>

</manifest>